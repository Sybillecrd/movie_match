<div class="container-fluid">

  <h4>My movies</h4>

  <%= link_to "Wishes", my_movies_path %>
  <%= "Seen" %>

  <div class="row">
    <% @movies.each do |movie| %>
      <div class="col-xs-6">
        <div class="card">
          <div class="movie-poster">
            <%= tmdb_image_tag("#{movie.poster}", style: "width: 100%; height: 100%;") %>
          </div>
          <div class="movie-title">
            <%= movie.title %>
          </div>
          <div class="movie-infos">
            <%= movie.release_year %>
          </div>
            <%= link_to "", my_movie_path(movie), class: "movie-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
