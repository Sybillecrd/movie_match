<div class="container-fluid">
  <div class="row">
    <% @movies.each do |movie| %>
      <div class="col-xs-6">
        <div class="card">
          <div class="movie-poster">
            <%= tmdb_image_tag("#{movie.poster}", style: "width: 100%; height: 100%;") %>
          </div>
          <div class="movie-title">
            <%= movie.title %>
          </div>
          <div class="movie-infos">
            <%= movie.release_year %>
            <% if movie.release_date < (DateTime.now - 30).to_s("yyyyMMdd").first(10) %>
              <%= " - Classic" %>
            <% elsif movie.release_date > (DateTime.now + 1).to_s("yyyyMMdd").first(10)%>
              <%= " - Upcoming" %>
            <% elsif movie.release_date >= (DateTime.now - 30).to_s("yyyyMMdd").first(10) && movie.release_date < (DateTime.now).to_s("yyyyMMdd").first(10) %>
              <%= " - In theaters" %>
            <% else %>
              <%= "" %>
            <% end %>
          </div>
            <%= link_to "", my_movie_path(movie), class: "movie-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

