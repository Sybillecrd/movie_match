<% if @next_trailer %>
  // ins√©rer dans carousel-inner le partial du next trailer
  $('.carousel-inner').append('<%= j render "trailers/trailer", trailer: @next_trailer, active: false %>');

  // slide carousel
  $('.carousel').carousel("next");

  // delete previous slide
  setTimeout(function(){
    $('.carousel .item').first().remove();
  }, 1000);
<% else %>
  $('.carousel-inner').append('<%= j render "trailers/no_more_movies", active: false %>');
  $('.carousel').carousel("next");

  // delete previous slide
  setTimeout(function(){
    $('.carousel .item').first().remove();
  },);
<% end %>
